<div id="<%= dom_id sale %>">
  <p>
    <strong>Total Amount:</strong>
    <%= sale.amount %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= sale.status %>
  </p>

  <p>
     <% sale.products.each do |product| %>
        <hr>
        <%= render product %>

        <%= form_with url: sale , method: :patch  do |form| %> 
          <%= form.hidden_field :product_id, value: product.id %>
          <%= form.hidden_field :update_action, value: "remove" %>
          <%= form.submit "Eliminar" %>
        <% end %>

     <%end%>
  </p>

</div>
